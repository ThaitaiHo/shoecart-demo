$('#total_price_cart').html("<%= number_to_currency(@total_price)%>")
<%if @cart.nil? %>
  $("#cart_item_id_<%= @product.id%>").remove();
  $("#product_action_<%= @product.id%>").html(
   "<%= escape_javascript(render(partial: 'product_action', locals: {product: @product.reload})) %>"
  )
<%else%>
  $('#item_quality_<%=@product.id%>').html("<%= @cart.quality%>")
<%end%>
<%if @current_cart.empty? %>
  $('#emptyNoti').show();

<%end%>