<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.image %></td>
        <td><%= product.color %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>


<div class="container">
  <div class="list">
    <div class="header">
      <%= image_tag 'nike.png', class: "nikeico"%>
      <p class="cart-title">Our Products</p>
    </div>
    <div class="list-items">
      <%= render partial: 'products/item_product'%>
    </div>  
  </div>
  <div class="list">
    <div class="cart-header">
      <%= image_tag 'nike.png', class: "nikeico"%>
      <div class="title"> 
        <p class="cart-title" >Your Cart</p>
        <p class="cart-title" id="total_price_cart"><%= number_to_currency(@total_price)%></p>
      </div>
    </div>
    <div class="content"></div>
      <div class="list-cart" id="list_carts">
        <% @carts.each do |cart| %>
          <%= render partial: 'products/item_cart', locals: {productC: cart} %>
        <% end %>

        <%if @carts.empty?%>
          <p class="descriptions" id="emptyNoti">Your cart is empty</p>
        <%end%>
        
      </div>
  </div>
</div>
